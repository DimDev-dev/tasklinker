{% extends 'base.html.twig' %}

{% block title %}Liste des projets - TaskLinker
{% endblock %}


{% block header %}
	<h1>Projets</h1>
{% endblock %}
{% block body %}
	<div id="projects-container">
		{% for projets in projet %}

			<article class="card-project">
				<a href="{{path('app_projet_projet', {id: projets.id})}}">
					<h2>{{projets.title}}</h2>
				</a>
				<div class="card-project-icons">
					<a href="{{path('app_projet_edit', {id: projets.id})}}">
						<i class="fa-solid fa-pen"></i>
					</a>
					<a href="{{path('app_projet_delete', {id: projets.id})}}">
						<i class="fa-solid fa-trash"></i>
					</a>
				</div>
			</article>
		{% endfor %}
		<article class="card-project">
			<a href="{{path('app_projet_add')}}">
				<i class="fa-solid fa-circle-plus add-project-icon"></i>
				<h2>Ajouter un projet</h2>
			</a>
		</article>
	</div>
{% endblock %}
