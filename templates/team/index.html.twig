{% extends 'base.html.twig' %}

{% block title %}Liste des employés - TaskLinker
{% endblock %}

{% block header %}
	<h1>Équipe</h1>
{% endblock %}
{% block body %}
	<table id="team-container">
		<thead>
			<tr>
				<th>Prénom, Nom</th>
				<th>Statut</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for employes in employe %}
				<tr>
					<td>
						<div class="employee-infos">
							<div class="employee-avatar">
								{{employes.lastname|first|upper}}{{employes.firstname|first|upper}}
							</div>
							<div class="employee-coords">
								<strong>{{employes.lastname|capitalize}}
									{{employes.firstname|capitalize }}</strong>
								<span>{{employes.email}}</span>
							</div>
						</div>
					</td>
					<td>{{employes.status}}</td>
					<td>
						<a class="button button-edit-team" href="{{path('app_team_edit',{id: employes.id})}}">
							Éditer
						</a>
						<a class="delete-team" href="{{path('app_team_delete', {id: employes.id})}}">
							Supprimer
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
