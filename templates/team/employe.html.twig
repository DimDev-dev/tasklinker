{% extends 'base.html.twig' %}

{% block title %}
	{{ employe.lastname }}
	{{ employe.firstname }}
	- TaskLinker
{% endblock %}

{% block header %}
	<h1>
		{{ employe.lastname|capitalize }}
		{{ employe.firstname|capitalize }}
	</h1>
{% endblock %}
{% block body %}
	{{ form_start(form) }}
	{{ form_row(form.lastname, {'label': "Nom"}) }}
	{{ form_row(form.firstname, {'label': 'Prenom'}) }}
	{{ form_row(form.email, {'label': 'Email'}) }}
	<div class="form-flex">
		{{ form_row(form.hireAt, {'label': "Date d'entr√©e"}) }}
		{{ form_row(form.status, {'label': "Statut"}) }}
	</div>
	<button class="button button-submit">Enregistrer</button>
	{{ form_end(form) }}
{% endblock %}
